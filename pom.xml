<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.exasol</groupId>
    <artifactId>azure-blob-storage-document-files-virtual-schema</artifactId>
    <version>1.1.3</version>
    <name>Virtual Schema for document data in files on Azure Blob Storage</name>
    <description>Adapter for document data access from files from Azure Blob Storage.</description>
    <url>https://github.com/exasol/azure-blob-storage-document-files-virtual-schema/</url>
    <properties>
        <junit.version>5.9.2</junit.version>
        <org.testcontainers.version>1.17.6</org.testcontainers.version>
        <vs-common-document-files.version>7.1.4</vs-common-document-files.version>
    </properties>
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <test.excludeTags>regression</test.excludeTags>
            </properties>
        </profile>
        <profile>
            <id>regressionTests</id>
            <properties>
                <groups>regression</groups>
            </properties>
        </profile>
    </profiles>
    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>
    <repositories>
        <repository>
            <id>sonatype</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <dependencies>
        <!-- override to avoid NoSuchMethodException -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>2.14.2</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>2.14.2</version>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>virtual-schema-common-document-files</artifactId>
            <version>${vs-common-document-files.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.fasterxml.jackson.core</groupId>
                    <artifactId>jackson-core</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>error-reporting-java</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.azure</groupId>
            <artifactId>azure-storage-blob</artifactId>
            <version>12.20.2</version>
        </dependency>
        <!-- Test dependencies -->
        <!-- overriding transitive dependency of virtual-schema-common-document-files to avoid
        vulnerability CVE-2021-37533 -->
        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>3.9.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest</artifactId>
            <version>2.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>virtual-schema-common-document-files</artifactId>
            <version>${vs-common-document-files.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>5.1.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${org.testcontainers.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>test-db-builder-java</artifactId>
            <version>3.4.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>udf-debugging-java</artifactId>
            <version>0.6.7</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>hamcrest-resultset-matcher</artifactId>
            <version>1.5.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>exasol-test-setup-abstraction-java</artifactId>
            <version>2.0.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
            <version>1.33</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>performance-test-recorder-java</artifactId>
            <version>0.1.2</version>
            <scope>test</scope>
        </dependency>
        <!-- override transitive dependency of azure-storage-blob to avoid vulnerability
        CVE-2022-42003 -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.14.2</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.sonatype.ossindex.maven</groupId>
                <artifactId>ossindex-maven-plugin</artifactId>
                <configuration>
                    <excludeVulnerabilityIds>
                        <!-- com.google.guava:guava:
                        https://ossindex.sonatype.org/vulnerability/sonatype-2020-0926
                        Excluded
                        because we assume that the attacker does not have local access to the
                        machine. -->
                        <exclude>sonatype-2020-0926</exclude>
                        <!-- io.netty:netty-handler:
                        https://ossindex.sonatype.org/vulnerability/sonatype-2020-0026
                        Not
                        a vulnerability in netty but how it is configured by the client
                        com.azure:azure-core-http-netty. -->
                        <exclude>sonatype-2020-0026</exclude>
                        <!-- org.apache.hadoop:hadoop-common:jar:3.3.4 -->
                        <!-- Rationale for exclusion: No update available, yet. -->
                        <exclude>sonatype-2022-5820</exclude>
                        <!-- org.apache.hadoop:hadoop-hdfs-client:jar:3.3.4 -->
                        <!-- Rationale for exclusion: No update available, yet. -->
                        <exclude>sonatype-2022-5732</exclude>
                        <!-- com.azure:azure-storage-blob:jar:12.20.0 dependency -->
                        <!-- io.projectreactor.netty:reactor-netty-core:jar:1.0.23 -->
                        <!-- Rationale for exclusion: No update available, yet. -->
                        <exclude>CVE-2022-31684</exclude>
                        <!-- Ignore vulnerability com.fasterxml.jackson.core:jackson-core:2.14.1
                             as
                        an exploit requires write access to the source code repository
                             and
                        attempts to inject malicious code will be detected during regular
                             code
                        reviews. -->
                        <exclude>sonatype-2022-6438</exclude>
                        <!-- Ignore vulnerability in Transitive dependency fr.turri:aXMLRPC
                                  via
                        com.exasol:exasol-test-setup-abstraction-java:jar.
                                  CVE-2020-36641
                        is reported to be fixed in aXMLRPC 1.12.1, while ETAJ uses version 1.13.0,
                        so this is a false positive. -->
                        <exclude>CVE-2020-36641</exclude>
                        <!-- org.yaml.snakeyaml (1.33)
                        Currently not fixed in latest version, however a test dependency and not used on untrusted files.
                        https://ossindex.sonatype.org/vulnerability/CVE-2022-38750 -->
                        <exclude>CVE-2022-1471</exclude>
                        <!-- org.json:json:jar:20220924:
                        Not an issue as the attacker does not control access to insert or adapt the JSON files to be read
                        out.
                        https://ossindex.sonatype.org/vulnerability/CVE-2022-45688 -->
                        <exclude>CVE-2022-45688</exclude>
                    </excludeVulnerabilityIds>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.exasol</groupId>
                <artifactId>project-keeper-maven-plugin</artifactId>
                <version>2.9.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <configuration>
                    <finalName>
                        document-files-virtual-schema-dist-${vs-common-document-files.version}-azure-blob-storage-${project.version}</finalName>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <useModulePath>false</useModulePath>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <parent>
        <artifactId>azure-blob-storage-document-files-virtual-schema-generated-parent</artifactId>
        <groupId>com.exasol</groupId>
        <version>1.1.3</version>
        <relativePath>pk_generated_parent.pom</relativePath>
    </parent>
</project>
